{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "/pinecone-summary/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "docker compose -f docker-compose.yml up --build",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
