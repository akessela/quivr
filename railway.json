{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
    ,
    "watchPatterns": [
      "streamlit-demo/**",
      "backend/**",
      "frontend/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "streamlit run main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1
  }
}
